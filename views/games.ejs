<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games</title>
  </head>
  <body>
    <h1>Games:</h1>
    <ul>
      <% games.map((game) => { %>
      <li>
        <%= game.title %>, <%=game.year %>, $<%= game.price %>, <%=
        game.developer%>
        <a href="/games/<%= game.id %>/update">Update</a>
        <form action="/games/<%= game.id %>/delete" method="post">
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this game?');"
          >
            Delete
          </button>
        </form>
      </li>
      <%}) %>
    </ul>
    <a href="/games/create">Add Game</a>
  </body>
</html>
