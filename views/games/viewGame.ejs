<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= game.title %></title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %>
    <h1><%= game.title %></h1>
    <ul>
      <li>Release Year: <%= game.year %></li>
      <li>Price: $<%= game.price %></li>
      <h2>Developers:</h2>
      <% developers.forEach((developer) => {%>
      <li>
        <%=developer.developer.charAt(0).toUpperCase() +
        developer.developer.slice(1)%>
      </li>
      <%})%>
      <h2>Genres:</h2>
      <% genres.forEach((genre) => { %>
      <li><%= genre.genre.charAt(0).toUpperCase() + genre.genre.slice(1)%></li>
      <%})%>
    </ul>

    <a href="/games/<%= game.id %>/update">Update</a>
    <form action="/games/<%= game.id %>/delete" method="post">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this game?');"
      >
        Delete
      </button>
    </form>
  </body>
</html>
